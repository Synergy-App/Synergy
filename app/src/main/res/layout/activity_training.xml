<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor1"
    tools:context=".main.fragment.LearningFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="@color/practiceColor1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="실습공간"
        android:fontFamily="@font/pretendard_extrabold"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자신의 실력을 검증하세요"
        android:fontFamily="@font/pretendard_extralight"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:layout_marginTop="49dp"
        android:layout_marginLeft="39dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/training_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"/>

</FrameLayout>